<div class="comment">
  <%= link_to comment.user, :action => 'go' do %>
    <div class="comment-header">
      <%= image_tag(comment.user.photo.url(:thumbnail), :class => "comment-user-photo") %>
      <div class="comment-user">
        <h4 class="comment-username"><%= comment.user.username %></h4>
        <p class="comment-time"><%= time_ago_in_words(comment.created_at) + " ago" %></p>
      </div>
    </div>
  <% end %>
  <%= comment.description %>
</div>
